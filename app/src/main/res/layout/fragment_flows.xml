<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:id="@+id/linearResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCity"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTemperature"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtHumidity"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/linearResults"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnMultipleCitiesAsyncFromList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get multiple cities async from list"
            />

        <Button
            android:id="@+id/btnMultipleCitiesSequentialFromList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get multiple cities sequential from list"
            />

        <Button
            android:id="@+id/btnMultipleCitiesAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get multiple cities async"
            />

        <Button
            android:id="@+id/btnMultipleCitiesSequential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get multiple cities sequential"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnWeatherCancelable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get weather cancelable"/>

            <Button
                android:id="@+id/btnCancelWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="cancel"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearNonMethodLiveDatasTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/linearButtons">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weather simple pattern"/>

            <TextView
                android:id="@+id/txtSimplePatternData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weather live data builder"/>

            <TextView
                android:id="@+id/txtLiveDataBuilderData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weather trigger switchmap with live data builder"/>

            <TextView
                android:id="@+id/txtTriggerSwitchmapWithLiveDataBuilder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
